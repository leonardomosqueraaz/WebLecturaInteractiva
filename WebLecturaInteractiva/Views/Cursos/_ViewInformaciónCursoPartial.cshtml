@model WebLecturaInteractiva.ModelViews.CreacionCursosViews


<div class="row">
    <div class="col-md-12">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group form-float">
            <b><label asp-for="Cursos.Nombre_Cursos" class="control-label"></label></b>
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="material-icons">create</i>
                </span>
                <div class="form-line">
                    <input asp-for="Cursos.Nombre_Cursos" class="form-control" />
                </div>
                <span asp-validation-for="Cursos.Nombre_Cursos" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group form-float">
            <b><label asp-for="Cursos.Descripcion_Cursos" class="control-label"></label></b>
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="material-icons">border_color</i>
                </span>
                <div class="form-line">
                    <input asp-for="Cursos.Descripcion_Cursos" class="form-control" />
                </div>
                <span asp-validation-for="Cursos.Descripcion_Cursos" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group form-float">
            <b><label asp-for="Cursos.FechaInicio_Cursos" class="control-label"></label></b>
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="material-icons">date_range</i>
                </span>
                <div class="form-line">
                    <input asp-for="Cursos.FechaInicio_Cursos" class="form-control" />
                </div>
                <span asp-validation-for="Cursos.FechaInicio_Cursos" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group form-float">
            <b><label asp-for="Cursos.HoraInicio_Cursos" class="control-label"></label> (24 Hora)</b>
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="material-icons">access_time</i>
                </span>
                <div class="form-line">
                    <input asp-for="Cursos.HoraInicio_Cursos" class="form-control" />
                </div>
                <span asp-validation-for="Cursos.HoraInicio_Cursos" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group form-float">
            <b> <label asp-for="Cursos.FechaFin_Cursos" class="control-label"></label></b>
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="material-icons">date_range</i>
                </span>
                <div class="form-line">
                    <input asp-for="Cursos.FechaFin_Cursos" class="form-control" />
                </div>
                <span asp-validation-for="Cursos.FechaFin_Cursos" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group form-float">
            <b><label asp-for="Cursos.HoraFin_Cursos" class="control-label"></label> (24 Hora)</b>
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="material-icons">access_time</i>
                </span>
                <div class="form-line">
                    <input asp-for="Cursos.HoraFin_Cursos" class="form-control" />
                </div>
                <span asp-validation-for="Cursos.HoraFin_Cursos" class="text-danger"></span>

            </div>
        </div>

        <div class="form-group form-float">
            <b><label asp-for="Cursos.TiempoLimite" class="control-label"></label> (24 Hora)</b>
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="material-icons">access_time</i>
                </span>
                <div class="form-line">
                    <input asp-for="Cursos.TiempoLimite" class="form-control" />
                </div>
                <span asp-validation-for="Cursos.TiempoLimite" class="text-danger"></span>
            </div>            
        </div> 
    </div>
</div>

